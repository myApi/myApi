<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="1.6.0" group="system" method="upgrade">
	<name>System - myApiOpenGraph</name>
	<author>Thomas Welton</author>
	<creationDate>April 2011</creationDate>
	<copyright>Copyright (C) 2011</copyright>
	<license>GNU/GPL http://www.gnu.org/copyleft/gpl.html</license>
	<authorEmail>thomaswelton@me.com</authorEmail>
	<authorUrl>www.myapi.co.uk</authorUrl>
	<version>1.0</version>
	<description>PLUGIN DESCRIPTION</description>
	<files>
		<filename plugin="myApiOpenGraph">myApiOpenGraph.php</filename>
	</files>
	
	<languages>
		<language tag="en-GB">languages/en-GB.plg_system_myApiOpenGraph.ini</language>
		<language tag="nb-NO">languages/nb-NO.plg_system_myApiOpenGraph.ini</language>
	</languages>
	
	<config><fields name="params"><fieldset name="basic">
		<field name="ogimage" type="filelist" default="" label="OGIMAGE_LABEL" description="OGIMAGE_DESC" directory="images" />
		<field name="fbpageid" type="text" label="PARAM_PAGEID_LABEL" description="PARAM_PAGEID_DESC" size="30" />
		<field name="fbadmins" type="text" label="PARAM_FBADMINS_LABEL" description="PARAM_FBADMINS_DESC" size="30" />
	</fieldset></fields></config>
</extension>
