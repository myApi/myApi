<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="1.6.0" group="content" method="upgrade">
	<name>Content - myApiComment</name>
	<author>Thomas Welton</author>
	<creationDate>March 2011</creationDate>
	<copyright>Copyright (C) 2011</copyright>
	<license>GNU/GPL http://www.gnu.org/copyleft/gpl.html</license>
	<authorEmail>thomaswelton@me.com</authorEmail>
	<authorUrl>http://www.myapi.co.uk</authorUrl>
	<version>1.0</version>
	<description>PLUGIN DESCRIPTION</description>
	<files>
		<filename plugin="myApiComment">myApiComment.php</filename>
		<folder>comment</folder>
	</files>
	
	<languages>
		<language tag="en-GB">languages/en-GB.plg_content_myApiComment.ini</language>
		<language tag="nb-NO">languages/nb-NO.plg_content_myApiComment.ini</language>
	</languages>
	
	<config><fields name="params"><fieldset name="basic">
		<field name="comments_width" type="text" default="500" label="PARAM_WIDTH_LABEL" description="PARAM_WIDTH_DESC" size="10" />
		<field name="comments_numposts" type="text" default="10" label="PARAM_NUMPOSTS_LABEL" description="PARAM_NUMPOSTS_DESC" size="10" />
		<field name="comments_scheme" type="list" default="light" label="PARAM_SCHEME_LABEL" description="PARAM_SCHEME_DESC">
		  	<option value="light">PARAM_SCHEME_LIGHT</option>
			<option value="dark">PARAM_SCHEME_DARK</option>
		</field>
		<field name="comments_view_article" type="radio" default="1" label="PARAM_ARTICLE_LABEL" description="PARAM_VIEW_DESC">
			<option value="1">PARAM_VIEW_BOX</option>
		  	<option value="2">PARAM_VIEW_LINK</option>
			<option value="3">PARAM_VIEW_TOGGLE</option>
			<option value="0">PARAM_VIEW_NONE</option>
		</field>
		
		<field name="comments_view_list" type="radio" default="2" label="PARAM_LIST_LABEL" description="PARAM_VIEW_DESC">
			<option value="1">PARAM_VIEW_BOX</option>
		  	<option value="2">PARAM_VIEW_LINK</option>
			<option value="3">PARAM_VIEW_TOGGLE</option>
			<option value="0">PARAM_VIEW_NONE</option>
			
		</field>
		
		<field name="comments_view_blog" type="radio" default="2" label="PARAM_BLOG_LABEL" description="PARAM_VIEW_DESC">
			<option value="1">PARAM_VIEW_BOX</option>
		  	<option value="2">PARAM_VIEW_LINK</option>
			<option value="3">PARAM_VIEW_TOGGLE</option>
			<option value="0">PARAM_VIEW_NONE</option>
		</field>
		
		<field name="comments_show_on" type="radio" default="all" label="PARAM_SHOW_LABEL" description="PARAM_SHOW_DESC">
			<option value="all">PARAM_SHOW_ALL</option>
		  	<option value="selected">PARAM_SHOW_SELECT</option>
		</field>
		
		<field name="comments_email" type="radio" default="1" label="PARAM_EMAIL_LABEL" description="PARAM_EMAIL_DESC">
			<option value="0">PARAM_EMAIL_NONE</option>
		  	<option value="1">PARAM_EMAIL_INSTANT</option>
			<option value="2">PARAM_EMAIL_CRON</option>
		</field>
		
        <field name="comment_sections" type="sqlmultilistx" sql="SELECT * FROM #__sections" key_field="id" value_field="title" default="" multiple="multiple" label="PARAM_SECTIONS_LABEL" description="PARAM_MULTI"  addPath="/plugins/content/comment/">
			<option value="-1"></option>
        </field>
		
		<field name="comment_categories" type="sqlmultilistx" sql="SELECT * FROM #__categories" key_field="title" value_field="title" default="" multiple="multiple" label="PARAM_CAT_LABEL" description="PARAM_MULTI"  addPath="/plugins/content/comment/">
			<option value="-1"></option>
        </field>
	</fieldset></fields></config>
</extension>
