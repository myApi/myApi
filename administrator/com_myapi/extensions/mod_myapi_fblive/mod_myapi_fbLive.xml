<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5">
    <!-- Name of the Module -->
        <name>Facebook Live Box</name>
 
    <!-- Name of the Author -->
        <author>Thomas Welton</author> 
 
    <!-- Version Date of the Module -->
        <creationDate>March 2011</creationDate> 
 
    <!-- Copyright information -->
        <copyright>All rights reserved 2011.</copyright> 
 
    <!-- License Information -->
       <license>GNU/GPL http://www.gnu.org/copyleft/gpl.html</license>
 
    <!-- Author's email address -->
        <authorEmail>thomaswelton@me.com</authorEmail> 
 
    <!-- Author's website -->
        <authorUrl>http://www.myapi.co.uk</authorUrl> 
 
    <!-- Module version number -->
        <version>1.0</version> 
 
    <!-- Description of what the module does -->
        <description>Displays a facebook live stream</description>
 
    <!-- Listing of all files that should be installed for the module to function -->
        <files>
        <!-- The "module" attribute signifies that this is the main controller file -->
                <filename module="mod_myapi_fbLive">mod_myapi_fbLive.php</filename>
				<filename>index.html</filename>
        </files>
 
    <!-- Optional parameters -->
	
	
	<params>	
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="Module Class Suffix" />
		<param name="live_width" type="text" default="180" label="Box width" description="Width of the box as a number eg 200" size="30" />
		<param name="live_height" type="text" default="" label="Box height" description="Height of the box as a number eg 200" size="30" />	
		<param name="live_xid" type="text" default="" label="Unique ID" description="unique ID for live stream, only required if you have multiple live streams on one page" size="30" />	
	</params>
		
</install>