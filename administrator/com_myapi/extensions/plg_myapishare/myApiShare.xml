<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="1.6.0" client="site" method="upgrade">
	<name>Content - myApiShare</name>
	<author>Thomas Welton</author>
	<creationDate>March 2011</creationDate>
	<copyright>Copyright (C) 2011</copyright>
	<license>GNU/GPL http://www.gnu.org/copyleft/gpl.html</license>
	<authorEmail>thomaswelton@me.com</authorEmail>
	<authorUrl>http://www.myapi.co.uk</authorUrl>
	<version>1.0</version>
	<description>PLUGIN DESCRIPTION</description>
	<files>
		<filename plugin="myApiShare">myApiShare.php</filename>
	</files>
	
	<languages>
		<language tag="en-GB">languages/en-GB.plg_content_myApiShare.ini</language>
		<language tag="nb-NO">languages/nb-NO.plg_content_myApiShare.ini</language>
	</languages>
	
	<config><fields name="params"><fieldset name="basic">
	
		<field name="share_type" type="list" default="button" label="PARAM_LAYOUT_LABEL" description="PARAM_LAYOUT_DESC">
			<option value="box_count">PARAM_BOX_COUNT</option>
			<option value="button_count">PARAM_BUTTON_COUNT</option>
			<option value="button">PARAM_BUTTON</option>
			<option value="icon">PARAM_ICON</option>
			<option value="icon_link">PARAM_ICON_LINK</option>
		</field>
		<field name="position" type="list" default="myApiShareTop" label="PARAM_POSITION_LABEL" description="PARAM_POSITION_DESC">
		  	<option value="myApiShareTop">PARAM_POSITION_TOP</option>
			<option value="myApiShareBottom">PARAM_POSITION_BOTTOM</option>
		</field>
		
		<field name="share_show_on" type="radio" default="all" label="PARAM_SHOW_LABEL" description="PARAM_SHOW_DESC">
			<option value="all">PARAM_SHOW_ALL</option>
			<option value="selected">PARAM_SHOW_SELECT</option>
		</field>
	
 		<field name="share_categories" type="SQL" class="inputbox" label="PARAM_CAT_LABEL" multiple="true" translate="true" 
           		query="SELECT * FROM #__categories" 
			   key_field="title" 
			   value_field="title" 
			   description="PARAM_MULTI" 
			   default="-1"> 
        	<option value="-1"></option>
    	</field>
		
		<field name="share_view_article" type="radio" default="1" label="PARAM_ARTICLE_LABEL" description="PARAM_VIEW_DESC">
		  	<option value="1">SHOW</option>
			<option value="0">HIDE</option>
		</field>
		
		<field name="share_view_list" type="radio" default="1" label="PARAM_LIST_LABEL" description="PARAM_VIEW_DESC">
		 	<option value="1">SHOW</option>
			<option value="0">HIDE</option>
		</field>
		
		<field name="share_view_blog" type="radio" default="1" label="PARAM_BLOG_LABEL" description="PARAM_VIEW_DESC">
		  	 	<option value="1">SHOW</option>
				<option value="0">HIDE</option>
		</field>
		
	</fieldset></fields></config>
	
</extension>
